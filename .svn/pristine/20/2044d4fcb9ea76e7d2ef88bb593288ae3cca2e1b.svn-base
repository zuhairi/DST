package com.watergrid.dst.client.view;

import com.google.gwt.user.client.ui.Composite;
import com.google.gwt.user.client.ui.HorizontalPanel;
import com.google.gwt.user.client.ui.Button;
import com.google.gwt.user.client.ui.HasVerticalAlignment;

public class TopCenterMenu extends Composite{
	
	
	public TopCenterMenu(){
		
		initializeComponents();
		
	}
	
	private void initializeComponents(){
		
		HorizontalPanel horizontalPanel = new HorizontalPanel();
		horizontalPanel.setVerticalAlignment(HasVerticalAlignment.ALIGN_BOTTOM);
		initWidget(horizontalPanel);
		horizontalPanel.setWidth("100%");
		horizontalPanel.setHeight("100%");
		
		Button btnNetwork = new Button("NETWORK");
		horizontalPanel.add(btnNetwork);
		
		Button btnExperiments = new Button("EXPERIMENTS");
		horizontalPanel.add(btnExperiments);
		
		Button btnResults = new Button("RESULTS");
		horizontalPanel.add(btnResults);
		
		Button btnFutureactions = new Button("FUTURE ACTIONS");
		horizontalPanel.add(btnFutureactions);
		
		Button btnAlerts = new Button("ALERTS");
		horizontalPanel.add(btnAlerts);
	}

}
